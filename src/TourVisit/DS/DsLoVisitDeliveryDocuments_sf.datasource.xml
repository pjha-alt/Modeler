<DataSource name="DsLoVisitDeliveryDocuments" backendSystem="sf" businessObjectClass="LoVisitDeliveryDocuments" external="false" editableEntity="Order__c" schemaVersion="2.0">
  <!-- For more information about the supported properties and nodes see corresponding DataSource.md file under ~Workspace/contractSnippets/YourModuel Section/DS/DS_DataSource -->
  <Attributes>
    <Attribute name="pKey" table="Order__c" column="Id" />
    <Attribute name="name" table="Order__c" column="Name" />
    <Attribute name="phase" table="Order__c" column="Phase__c" />
     <Attribute name="grossTotalValue" table="Order__c" column="Gross_Total_Value__c" />
    <Attribute name="currency" table="Order__c" column="Currency__c" />
    <Attribute name="customerId" table="Order__c" column="Order_Account__c" />
    <Attribute name="documentTransactionType" table="Order__c" column="Document_Transaction_Type__c" />
    <Attribute name="orderType" table="Order_Template__c" column="Description__c" />
    <DerivedAttribute name="phaseIcon" value="CASE WHEN Order__c.Phase__c = 'Released' THEN 'DocumentStatus_Completed' WHEN Order__c.Phase__c = 'Canceled' THEN 'DocumentStatus_Canceled' WHEN Order__c.Phase__c = 'Initial' THEN 'DocumentStatus_Open'  END"/>
  </Attributes>
  <Entities>
    <Entity name="Order__c" alias="" idAttribute="Id" />
    <Entity name="Order_Template__c" alias="">
      <Join Type="inner">
        <SimpleJoin>
          <Condition leftSideValue="Order_Template__c.Id" comparator="eq" rightSideType="Attribute" rightSideValue="Order__c.Order_Template__c" />
        </SimpleJoin>
      </Join>
    </Entity>
  </Entities>
   <QueryCondition><![CDATA[
    Order__c.Document_Type__c='Delivery'
    AND Order_Template__c.Document_Type__c = 'Delivery'
    AND Order__c.Visit__c='#visitId#'
    AND Order__c.Responsible__c='#UserPKey#'
    ]]>
  </QueryCondition>
  <OrderCriteria>
    <OrderCriterion entity="Order__c" attribute="Order_Date__c" direction="ASC" />
    <OrderCriterion entity="Order__c" attribute="Name" direction="ASC" />
  </OrderCriteria>
  <Parameters >
    <Parameter name="visitId" type="TEXT" />
  </Parameters>
</DataSource>